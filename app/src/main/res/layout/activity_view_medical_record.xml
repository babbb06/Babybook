<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medical Record Details"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/textViewDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date: " />

    <TextView
        android:id="@+id/textViewWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weight: " />

    <TextView
        android:id="@+id/textViewTemperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temperature: " />

    <TextView
        android:id="@+id/textViewSummaryDiagnosis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Summary of Diagnosis: " />

    <TextView
        android:id="@+id/textViewTreatmentPlan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Treatment Plan: " />

    <TextView
        android:id="@+id/textViewFollowUpPlan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Follow Up Plan: " />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Checklist:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp" />

    <CheckBox
        android:id="@+id/checkBoxSick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Is the child TOO SICK?" />

    <CheckBox
        android:id="@+id/checkBoxCough"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Does the child have COUGH or DIFFICULT BREATHING?" />

    <CheckBox
        android:id="@+id/checkBoxDiarrhea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Does the child have DIARRHOEA?" />

    <CheckBox
        android:id="@+id/checkBoxFever"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Does the child have FEVER?" />

    <CheckBox
        android:id="@+id/checkBoxMeasles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Does the child have MEASLES or had it in the last 3 months?" />

    <CheckBox
        android:id="@+id/checkBoxEarPain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Does the child have EAR PAIN/DISCHARGE?" />

    <CheckBox
        android:id="@+id/checkBoxPallor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check all children for PALLOR." />

    <CheckBox
        android:id="@+id/checkBoxMalnourished"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check if the child is MALNOURISHED." />

    <CheckBox
        android:id="@+id/checkBoxFeeding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Assess FEEDING if age &lt; 2 years/ANAEMIA/MALNUTRITION." />

    <CheckBox
        android:id="@+id/checkBoxBreastfeeding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Assess BREAST FEEDING if aged up to 6 months." />

    <CheckBox
        android:id="@+id/checkBoxDiarrheaCough"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Does the child have DIARRHOEA and/or COUGH for more than 2 WEEKS?" />

    <CheckBox
        android:id="@+id/checkBoxImmunization"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Does the child need IMMUNIZATION?" />

    <CheckBox
        android:id="@+id/checkBoxOtherProblems"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Always ask a caregiver; is there any OTHER PROBLEMS?" />

</LinearLayout>
