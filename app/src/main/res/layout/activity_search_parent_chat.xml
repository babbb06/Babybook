<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchParentChatActivity"
    android:background="#E1DFDF">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/header"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    <EditText
        android:id="@+id/editTextSearchParent"
        android:layout_width="700dp"
        android:layout_height="wrap_content"
        android:hint="Enter parent full name"
        android:background="@drawable/edittext_background"
        android:fontFamily="@font/poppins"
        android:layout_below="@id/toolbar"
        android:layout_marginTop="16dp"
        android:layout_margin="20dp"
        android:padding="16dp" />

    <Button
        android:id="@+id/buttonSearchParent"
        android:layout_width="371dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextSearchParent"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_button"
        android:text="Search" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewParents"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/buttonSearchParent"
        android:layout_marginTop="46dp"
        android:padding="16dp" />
</RelativeLayout>
